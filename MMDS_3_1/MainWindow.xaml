<Window x:Class="HeightPlotUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="График высоты H(t)" Width="900" Height="500"
        Background="#1E1E1E">
    <Grid Margin="16">
        <Border CornerRadius="6" Background="#222" BorderBrush="#444" BorderThickness="1">
            <Grid>
                <Canvas x:Name="AxesCanvas"/>
                <Canvas x:Name="PlotCanvas">
                    <Polyline x:Name="HeightPolyline"
                              Stroke="#4FC3F7" StrokeThickness="2"/>
                </Canvas>
            </Grid>
        </Border>
    </Grid>
</Window>
